import java.util.*;

public class MyClass {
    public static void main(String args[]) {
        Scanner sc=new Scanner(System.in);
	   String s=sc.nextLine().toLowerCase();
	   int k=sc.nextInt();
	   char[] c=s.toCharArray();
	   int b=c.length;
	   for(int i=0;i<b;i++)
	   {
	            int x=c[i]-97;
	           int x1=(x+k)%26;
	           int x2=x1+97;
	      System.out.print((char)x2);
	           
	       
	   }
    }
}
