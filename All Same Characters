import java.util.*;
public class Hello {

    public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		String s=sc.next();
		char[] c=s.toCharArray();
		int flag=0;
		for(int i=1;i<c.length;i++){
		    if((c[0]-'0')==(c[i]-'0')){
		        flag=1;
		    }else
		    {
		        System.out.print("NO");
		        System.exit(0);
		    }
		}
		if(flag==1){
		    System.out.print("YES");
		}
		else{
		    System.out.print("NO");
		}

	}
}
