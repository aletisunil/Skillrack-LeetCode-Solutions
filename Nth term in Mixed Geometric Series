import java.util.*;
public class Hello {

    public static void main(String[] args) {
		//Your Code Here
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int[] a=new int[n+1];
		double p=0;
		int k=0;
		int k1=0;
		for(int i=0;i<n;i++)
		{
		    if(i%2==0)
		    {
		        p=Math.pow(2,k);
		        a[i]=(int)p;
		        k++;
		    }
		    else
		    {
		        p=Math.pow(3,k1);
		        a[i]=(int)p;
		        k1++;
		    }
		}
System.out.print(a[n-1]);
	}
}
