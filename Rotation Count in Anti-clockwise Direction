import java.util.*;
public class Hello {

    public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int[]a=new int[n];
		int count=0;
		int res=0;
		for(int i=0;i<n;i++)
		{
		    a[i]=sc.nextInt();
		}
		int min=a[0];
		for(int i=0;i<n;i++)
		{
		    if(min>a[i])
		    {
		        min=a[i];
		        res=i;
		    }
		}
		System.out.print(res);
		}
    }
